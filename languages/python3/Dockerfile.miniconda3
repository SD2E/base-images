FROM sd2e/base:miniconda3
LABEL ORG=sd2e.org IMAGE=python3

ARG CHANNEL=stable
ARG LANGUAGE=python3
ARG BASE=miniconda3

ARG AGAVEPY_BRANCH=develop
ARG PYTHON_PIP_VERSION=9.0.3

RUN apt-get -y update && \
    apt-get -y install build-essential \
                       python3 \
                       python3-dev \
                       python3-pip \
                       python3-setuptools \
                       build-essential \
                       libssl-dev \
                       libffi-dev  && \
    apt-get clean

RUN pip3 install --upgrade pip==${PYTHON_PIP_VERSION}
RUN pip3 install --upgrade virtualenv git+https://github.com/TACC/agavepy.git@${AGAVEPY_BRANCH}

ADD requirements-${CHANNEL}.txt /requirements.txt
RUN pip3 install --upgrade --no-cache-dir --upgrade -r /requirements.txt
